@model IEnumerable<TaskItem>

@{
    ViewData["Title"] = "List of Tasks";
}

<div class="row">
	@foreach (var item in Model)
	{
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.TaskName</p>
                            <p class="card-text"><b>Comments: </b>@item.TaskComments</p>
                            <p class="card-text"><b>Due Date: </b>@item.TaskDueDate.ToString("dd MMM yyyy")</p>
                            <p class="card-text"><b>Date Completed: </b>@item.CompletedDate.ToString()</p>
                            <p class="card-text "></p>
                        </div>
                    </div>               
                </div>
                <div class="col-md-12">
                    <div class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div style="position: fixed; right: 25px; bottom: 25px; " class="text-white">
    <a asp-controller="Tasks" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New </a>
</div>
