﻿
@model TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.TaskName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="UnitCode" class="control-label"></label>
                        <input asp-for="UnitCode" class="form-control" style="background-color:wheat; pointer-events:none" readonly />
                        <span asp-validation-for="UnitCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskName" class="control-label"></label>
                    <input asp-for="TaskName" class="form-control" style="background-color:wheat; pointer-events:none" readonly />
                    <span asp-validation-for="TaskName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskComments" class="control-label"></label>
                        <input asp-for="TaskComments" class="form-control" style="background-color:wheat; pointer-events:none" readonly />
                        <span asp-validation-for="TaskComments" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskDueDate" class="control-label"></label>
                        <input asp-for="TaskDueDate" type="datetime" id="datepicker" class="form-control" autocomplete="off" />
                        <span asp-validation-for="TaskDueDate" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-top: 10px;">
                        <form asp-action="Delete">
                        <input type="hidden" asp-for="Id"/>
                        <input type="submit" value="Confirm" class="btn btn-outline-success" />
                        <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>
                        }